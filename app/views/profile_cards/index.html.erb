<header>
  <%# <div class="instructions"> %>
  <h1>Profile Cards</h1>
</header>

<main>


  <%= link_to 'New Profile Card', new_profile_card_path %>

  <table>
    <thead>
      <tr>
        <br/>
        <a>Voir les autres cartes de profil</a>
        <th>Background</th>
        <th>Picture</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Birth year</th>
        <th>Hobbies</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @profile_cards.each do |profile_card| %>
        <tr>
          <td><%= profile_card.background %></td>
          <td><%= profile_card.picture %></td>
          <td><%= profile_card.first_name %></td>
          <td><%= profile_card.last_name %></td>
          <td><%= profile_card.birth_year %></td>
          <td><%= profile_card.hobbies %></td>
          <td><%= link_to 'Show', profile_card %></td>
          <td><%= link_to 'Edit', edit_profile_card_path(profile_card) %></td>
          <td><%= link_to 'Destroy', profile_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>



</main>
